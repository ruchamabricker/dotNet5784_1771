<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="141*"/>
            <RowDefinition Height="76*"/>
        </Grid.RowDefinitions>
        <!--will show all engineers-->
        <Button Content="Handle Engineers" HorizontalAlignment="Left" Height="89" Margin="54,68,0,0" VerticalAlignment="Top" Width="689" Click="btnEngineers_Click"/>
        <Button Content="Handle Tasks" HorizontalAlignment="Left" Height="89" VerticalAlignment="Top" Width="688" Click="btnTasks_Click" Margin="54,173,0,0"/>
        <Button Content="Data Initialization" HorizontalAlignment="Center" Height="89" Margin="0,27,0,0" VerticalAlignment="Top" Width="684" Click="btnDataInitialization_Click" Grid.Row="1"/>
    </Grid>
</Window>
